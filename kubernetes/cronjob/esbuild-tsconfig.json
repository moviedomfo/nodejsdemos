{
  "compilerOptions": {
    "target": "ES6",
    "module": "es2015",
    "esModuleInterop": true,
    "moduleResolution": "Bundler",
    "noImplicitAny": false,
    "sourceMap": true,
    "noLib": false,
    "allowJs": false,
    "skipLibCheck": true,
    "rootDir": "./src",
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "@common/*": ["./src/common/*"],
      "@infra/*": ["./src/infra/*"],
      "@domain/*": ["./src/domain/*"],
      "@app/*": ["./src/app/*"]
    },

    "noEmit": false,
    "strict": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": [],
    "typeRoots": ["./node_modules/@types"],
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedParameters": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/build", "**/dist", "**/*.md", "**/rollup.config.js", "src/**/*.test.ts"]
}
